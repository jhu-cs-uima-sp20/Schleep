<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/repeat3"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_below="@+id/task"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/underline"
        android:text="Repeat"

        android:textSize="25sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"

        android:layout_alignParentTop="true"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="67dp"
        android:text="@string/time"
        android:textSize="25sp" />

    <TimePicker
        android:id="@+id/time_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="111dp"
        android:timePickerMode="spinner" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_below="@+id/time_picker"
        android:layout_alignParentStart="true"

        android:layout_alignParentLeft="true"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="14dp"
        android:text="Name"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/name_alarm_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time_picker"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="72dp"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="8dp"
        android:gravity="end"
        android:text="Name"
        android:textAlignment="textEnd"
        android:textAllCaps="false"
        android:textColor="@color/fadedWords" />

    <TextView
        android:id="@+id/task"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_below="@+id/name_alarm_create"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="19dp"
        android:background="@drawable/underline"
        android:text="Task"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/task_button_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Snooze"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="7dp"
        android:background="@color/cardview_light_background"
        android:gravity="end"
        android:text="None"
        android:textAlignment="textEnd"
        android:textAllCaps="false"
        android:textColor="@color/fadedWords"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/Snooze"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_below="@+id/repeat3"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/underline"
        android:text="Snooze"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/Sound"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_below="@+id/Snooze"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/underline"
        android:text="Sound"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/task_button_sound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Sound"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="7dp"
        android:background="@color/cardview_light_background"
        android:gravity="end"
        android:text="Default"
        android:textAlignment="textEnd"
        android:textAllCaps="false"
        android:textColor="@color/fadedWords"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/task_button_repeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/repeat3"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="7dp"
        android:background="@color/cardview_light_background"
        android:gravity="end"
        android:text="Never"
        android:textAlignment="textEnd"
        android:textAllCaps="false"
        android:textColor="@color/fadedWords"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/task_button_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/task"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="7dp"
        android:background="@color/cardview_light_background"
        android:gravity="end"
        android:text="None"
        android:textAlignment="textEnd"
        android:textAllCaps="false"
        android:textColor="@color/fadedWords"
        android:textSize="18sp" />
    <!--
    -->

</RelativeLayout>